    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/menuLayout"
        android:background="@drawable/bg" />

    <TextView
        android:id="@+id/menu_more_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/tip_textview_margin_bottom"
        android:layout_marginRight="20dp"
        android:background="@drawable/more_tip"
        android:gravity="center"
        android:textColor="#663300"
        android:textSize="@dimen/main_bottom_msg_sz"
